{
  "dashboard": {
    "title": "Mini-Telegram",
    "uid": "mt",
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Message Rate (msgs/sec)",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(gateway_msg_sent_total[5m])",
            "legendFormat": "Messages/sec"
          }
        ]
      },
      {
        "id": 2,
        "title": "p99 Delivery Latency",
        "type": "stat",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(gateway_delivery_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.1, "color": "yellow" },
                { "value": 0.2, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Active WebSocket Connections",
        "type": "stat",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "gateway_ws_connections",
            "legendFormat": "Connections"
          }
        ]
      },
      {
        "id": 4,
        "title": "Goroutines",
        "type": "graph",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "go_goroutines",
            "legendFormat": "{{job}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Delivery Latency Distribution",
        "type": "graph",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(gateway_delivery_duration_seconds_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.90, rate(gateway_delivery_duration_seconds_bucket[5m]))",
            "legendFormat": "p90"
          },
          {
            "expr": "histogram_quantile(0.99, rate(gateway_delivery_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Latency" }
        ]
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "go_memstats_alloc_bytes",
            "legendFormat": "{{job}}"
          }
        ],
        "yaxes": [
          { "format": "bytes", "label": "Memory" }
        ]
      },
      {
        "id": 7,
        "title": "HTTP Request Duration",
        "type": "graph",
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{path}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Message Count by Chat Type",
        "type": "graph",
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(gateway_msg_sent_total[5m])",
            "legendFormat": "{{chat_type}}"
          }
        ]
      }
    ]
  }
}

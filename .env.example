# Server Configuration
GIN_MODE=release
PORT=8080

# Database
DSN=postgres://user:pgpass@postgres:5432/minitelegram?sslmode=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis
REDIS_ADDR=redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ
AMQP_URL=amqp://guest:guest@rabbitmq:5672/

# JWT
JWT_PRIVATE_KEY_PATH=/secrets/es256.key

# Timeouts
REDIS_TIMEOUT=2s
POSTGRES_TIMEOUT=5s

# Connection Registry
CONN_TTL=35s
PING_INTERVAL=30s

# Rate Limiting
LOGIN_RATE_LIMIT=5
WS_RATE_LIMIT=20
